# Shodh Environment Configuration
# Copy this file to .env and configure your values

# =============================================================================
# LLM Provider Settings
# =============================================================================
# Choose your LLM provider: ollama, openai, azure_openai, gemini
LLM_PROVIDER=ollama
EMBEDDING_PROVIDER=ollama

# --- Ollama (local) ---
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
EMBEDDING_MODEL=nomic-embed-text:v1.5

# --- OpenAI ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# --- Azure OpenAI ---
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_DEPLOYMENT_NAME=
AZURE_EMBEDDING_DEPLOYMENT=

# --- Google Gemini ---
GEMINI_API_KEY=
GEMINI_MODEL=models/gemini-1.5-flash-latest
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# =============================================================================
# CrewAI Agent Models
# =============================================================================
CREW_LLM_SMALL=gemini-2.5-flash
CREW_LLM_LARGE=gemini-2.5-flash

# =============================================================================
# Database Configuration
# =============================================================================
# Vector database path (ChromaDB)
VECTOR_DB_PATH=./chroma_db
COLLECTION_NAME=research_papers

# For remote ChromaDB (optional)
VECTOR_DB_HOST=
VECTOR_DB_PORT=8000

# =============================================================================
# Docling (PDF Processing)
# =============================================================================
DOCLING_ENABLE_VLM=false
DOCLING_VLM_MODEL=smolvlm-v1
DOCLING_VLM_API_URL=http://localhost:11434/v1/chat/completions
DOCLING_VLM_API_KEY=

# =============================================================================
# Job Queue (Redis)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Other
# =============================================================================
HF_TOKEN=
